{% extends 'layout_clean.html.twig' %}

{% block title %}{{ 'register.title'|trans }} | {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        body {
            margin: 0;
            padding: 0;
            background: url(/img/background.jpg) fixed 50% 50%;
            background-size: cover;
        }
    </style>
{% endblock %}

{% block content %}
    <!-- Signup -->
    <section class="container g-py-30">
        <div class="row justify-content-center">
            <div class="col-sm-10 col-md-9 col-lg-6">
                <div class="g-brd-around g-brd-gray-light-v4 rounded g-py-40 g-px-30 g-bg-white">
                    <header class="text-center mb-4">
                        <h2 class="h2 g-color-black g-font-weight-600">{{ 'register.title'|trans }}</h2>
                    </header>

                    <!-- Form -->
                    {{ form_start(register_form, {'attr': {'class': 'g-py-15'}}) }}
                        {{ form_errors(register_form) }}

                        <div class="form-group {% if register_form.username.vars.errors|length %}u-has-error-v1{% endif %} mb-4">
                            <div class="input-group">
                                <span class="input-group-addon g-width-45 g-brd-gray-light-v4 g-color-gray-dark-v5">
                                    <i class="icon-finance-067 u-line-icon-pro"></i>
                                </span>
                                {{ form_widget(register_form.username, {'attr': {'class': 'form-control g-brd-gray-light-v4 g-brd-primary--hover g-py-15 g-px-15'}}) }}
                            </div>
                            <small class="form-control-feedback">{{ form_errors(register_form.username) }}</small>
                        </div>

                        <div class="form-group {% if register_form.email.vars.errors|length %}u-has-error-v1{% endif %} mb-4">
                            <div class="input-group">
                                <span class="input-group-addon g-width-45 g-brd-gray-light-v4 g-color-gray-dark-v5">
                                    <i class="icon-communication-062 u-line-icon-pro"></i>
                                </span>
                                {{ form_widget(register_form.email, {'attr': {'class': 'form-control g-brd-gray-light-v4 g-brd-primary--hover g-py-15 g-px-15'}}) }}
                            </div>
                            <small class="form-control-feedback">{{ form_errors(register_form.email) }}</small>
                        </div>

                        <div class="row">
                            <div class="form-group {% if register_form.password.vars.errors|length %}u-has-error-v1{% endif %} col-xs-12 col-sm-6 mb-4">
                                <div class="input-group">
                                    <span class="input-group-addon g-width-45 g-brd-gray-light-v4 g-color-gray-dark-v5">
                                        <i class="icon-media-094 u-line-icon-pro"></i>
                                    </span>
                                    {{ form_widget(register_form.password, {'attr': {'class': 'form-control g-brd-gray-light-v4 g-brd-primary--hover g-py-15 g-px-15'}}) }}
                                </div>
                                <small class="form-control-feedback">{{ form_errors(register_form.password) }}</small>
                            </div>

                            <div class="form-group {% if register_form.password_verify.vars.errors|length %}u-has-error-v1{% endif %} col-xs-12 col-sm-6 mb-4">
                                <div class="input-group">
                                    <span class="input-group-addon g-width-45 g-brd-gray-light-v4 g-color-gray-dark-v5">
                                        <i class="icon-media-094 u-line-icon-pro"></i>
                                    </span>
                                    {{ form_widget(register_form.password_verify, {'attr': {'class': 'form-control g-brd-gray-light-v4 g-brd-primary--hover g-py-15 g-px-15'}}) }}
                                </div>
                                <small class="form-control-feedback">{{ form_errors(register_form.password_verify) }}</small>
                            </div>
                        </div>

                        <div class="form-group {% if register_form.recaptcha.vars.errors|length %}u-has-error-v1{% endif %} mb-4">
                            {{ form_widget(register_form.recaptcha) }}
                            <small class="form-control-feedback">{{ form_errors(register_form.recaptcha) }}</small>
                        </div>

                        <div class="form-group {% if register_form.terms.vars.errors|length %}u-has-error-v1{% endif %} mb-4">
                            <label class="form-check-inline u-check g-color-gray-dark-v5 g-font-size-13 g-pl-25">
                                {{ form_widget(register_form.terms, {'attr': {'class': 'g-hidden-xs-up g-pos-abs g-top-0 g-left-0'}}) }}
                                <span class="u-check-icon-checkbox-v6 g-absolute-centered--y g-left-0">
                                    <i class="fa g-rounded-2" data-check-icon="&#xf00c"></i>
                                </span>
                                {{ register_form.terms.vars.label|trans|replace({'%link%': '<a href="https://www.orbitrondev.org/terms-of-service">', '%/link%': '</a>'})|raw }}
                            </label>
                            <div></div>
                            <small class="form-control-feedback">{{ form_errors(register_form.terms) }}</small>
                        </div>

                        {{ form_widget(register_form.send, {'attr': {'class': 'btn btn-md btn-block u-btn-primary rounded-0 g-py-15 mb-5'}}) }}
                    {{ form_end(register_form) }}
                    <!-- End Form -->

                    <footer class="text-center">
                        <p class="g-color-gray-dark-v5 g-font-size-13 mb-0">
                            {{ 'register.footer.text'|trans }}
                            <a class="g-font-weight-600" href="{{ path('login') }}">{{ 'register.footer.login'|trans }}</a>
                        </p>
                    </footer>
                </div>
            </div>
        </div>
    </section>
    <!-- End Signup -->
{% endblock %}
