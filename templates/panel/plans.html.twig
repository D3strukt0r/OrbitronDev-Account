                        </li>
                        <li class="list-group-item">
                            {{ 'panel.page.plans.block_info.info4'|trans }}
                            <span class="fa fa-check pull-right"></span>
                        </li>
                    </ul>
                    <div class="card-footer">
                        {% if app.user.subscription.subscription.id == 2 %}
