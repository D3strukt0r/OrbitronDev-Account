{% extends 'layout_admin.html.twig' %}

{% form_theme edit_profile_form 'form/admin-choice.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/blueimp-file-upload/9.19.1/css/jquery.fileupload.min.css" />
{% endblock %}

{% block breadcrumb %}
    <div class="g-hidden-sm-down g-bg-gray-light-v8 g-pa-20">
        <ul class="u-list-inline g-color-gray-dark-v6">

            <li class="list-inline-item">
                <span class="g-valign-middle">{{ 'panel.page.profile.breadcrumb_link'|trans }}</span>
            </li>
        </ul>
    </div>
{% endblock %}

{% block content %}
    <div class="g-pa-20">
        <h1 class="g-font-weight-300 g-font-size-28 g-color-black g-mb-40">{{ 'panel.page.profile.title'|trans }}</h1>
        <div class="row">
            <div class="col-lg-6">
                {{ form_start(edit_profile_form, {'attr': {'class': 'card'}}) }}
                    <div class="card-header">{{ 'panel.page.profile.block1.title'|trans }}</div>
                    <div class="card-body">

                        <div class="form-group row">
                            {{ form_label(edit_profile_form.first_name, null, {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                            <div class="col-sm-8">
                                {{ form_widget(edit_profile_form.first_name, {'attr': {'class': 'form-control form-control-md g-brd-gray-light-v7 g-brd-gray-light-v3--focus g-rounded-4 g-px-14 g-py-10'}}) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            {{ form_label(edit_profile_form.last_name, null, {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                            <div class="col-sm-8">
                                {{ form_widget(edit_profile_form.last_name, {'attr': {'class': 'form-control form-control-md g-brd-gray-light-v7 g-brd-gray-light-v3--focus g-rounded-4 g-px-14 g-py-10'}}) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            {{ form_label(edit_profile_form.gender, null, {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                            <div class="col-sm-8">
                                <div class="form-group u-select--v3 g-pos-rel g-brd-gray-light-v7 g-rounded-4 mb-0">
                                    {{ form_widget(edit_profile_form.gender, {'attr': {'class': 'js-select u-select--v3-select u-sibling w-100'}}) }}
                                    <div class="d-flex align-items-center g-absolute-centered--y g-right-0 g-color-gray-light-v6 g-color-lightblue-v9--sibling-opened g-mr-15">
                                        <i class="hs-admin-angle-down"></i>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            {{ form_label(edit_profile_form.birthday, null, {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                            <div class="col-sm-8">
                                <div id="datepickerWrapper" class="u-datepicker-right u-datepicker--v3 g-pos-rel w-100 g-cursor-pointer g-brd-around g-brd-gray-light-v7 g-rounded-4">
                                    {{ form_widget(edit_profile_form.birthday, {'attr': {'class': 'js-range-datepicker g-bg-transparent g-font-size-12 g-font-size-default--md g-color-gray-dark-v6 g-pr-80 g-pl-15 g-py-9', 'data-rp-wrapper': '#datepickerWrapper', 'data-rp-date-format': 'd/m/Y'}}) }}
                                    <div class="d-flex align-items-center g-absolute-centered--y g-right-0 g-color-gray-light-v6 g-color-lightblue-v9--sibling-opened g-mr-15">
                                        <i class="hs-admin-calendar g-font-size-18 g-mr-10"></i>
                                        <i class="hs-admin-angle-down"></i>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">{{ 'panel.page.profile.block1.addresses'|trans }}</label>
                            <div class="col-sm-8">
                                <a href="{{ path('panel', {'page': 'add-address'}) }}" class="btn btn-success btn-sm mb-1">{{ 'panel.page.profile.block1.add_address'|trans }}</a>
                                {% for address in app.user.profile.addresses %}
                                    <div class="mt-1 p-3 border border-primary">
                                        {{ address.street }} {{ address.housenumber }}<br />
                                        {{ address.zipcode }} {{ address.city }}<br />
                                        {{ address.country }}
                                    </div>
                                {% endfor %}
                            </div>
                        </div>

                        <div class="form-group row">
                            {{ form_label(edit_profile_form.website, null, {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                            <div class="col-sm-8">
                                {{ form_widget(edit_profile_form.website, {'attr': {'class': 'form-control form-control-md g-brd-gray-light-v7 g-brd-gray-light-v3--focus g-rounded-4 g-px-14 g-py-10'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="form-row">
                            <div class="col">
                                {{ form_widget(edit_profile_form.password_verify, {'attr': {'class': 'form-control form-control-md g-brd-gray-light-v7 g-brd-gray-light-v3--focus g-rounded-4 g-px-14 g-py-10'}}) }}
                            </div>
                            {{ form_widget(edit_profile_form.send, {'attr': {'class': 'btn u-btn-blue'}}) }}
                        </div>
                        <div class="form-row">
                            <small class="form-text text-danger">{{ form_errors(edit_profile_form.password_verify) }}</small>
                        </div>
                    </div>
                {{ form_end(edit_profile_form) }}
            </div>
            <div class="col-lg-6">
                <form method="post" class="card">
                    <div class="card-header">{{ 'panel.page.profile.block2.title'|trans }}</div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div id="profile-picture" class="col-md-4">
                                <img class="img-thumbnail" src="{{ path('api', {'function': 'get_img', 'user_id': app.user.id}) }}" />
                            </div>
                        </div>
                        <section>
                            <div class="row">
                                <div class="col col-4">
                                    <label class="input">
                                        <span class="btn u-btn-blue fileinput-button">
                                            <i class="fa fa-plus"></i>
                                            <span>{{ 'panel.page.profile.block2.upload'|trans }}</span>
                                            <input id="fileupload" type="file" name="files" />
                                        </span>
                                    </label>
                                </div>
                                <div class="col col-8">
                                    <p>
                                        <span id="upload-progress-speed">0 KB/s</span>
                                        <span id="upload-progress-percentage" class="pull-right">0%</span>
                                    </p>
                                    <div class="progress">
                                        <div id="upload-progress" class="progress-bar" role="progressbar" style="width:0" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">0%</div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </form>
            </div>
        </div>

        <!-- The jQuery UI widget factory, can be omitted if jQuery UI is already included -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/blueimp-file-upload/9.19.2/js/vendor/jquery.ui.widget.min.js"></script>
        <!-- The Load Image plugin is included for the preview images and image resizing functionality -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/blueimp-load-image/2.17.0/load-image.all.min.js"></script>
        <!-- The Canvas to Blob plugin is included for image resizing functionality -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/javascript-canvas-to-blob/3.14.0/js/canvas-to-blob.min.js"></script>
        <!-- The Iframe Transport is required for browsers without support for XHR file uploads -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/blueimp-file-upload/9.19.2/js/jquery.iframe-transport.min.js"></script>
        <!-- The basic File Upload plugin -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/blueimp-file-upload/9.19.2/js/jquery.fileupload.min.js"></script>
        <!-- The File Upload processing plugin -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/blueimp-file-upload/9.19.2/js/jquery.fileupload-process.min.js"></script>
        <!-- The File Upload image preview & resize plugin -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/blueimp-file-upload/9.19.2/js/jquery.fileupload-image.min.js"></script>

        <script>
            // Initialize the jQuery File Upload widget:
            $('#fileupload').fileupload({
                // Uncomment the following to send cross-domain cookies:
                //xhrFields: {withCredentials: true},
                url: '{{ path('api', {'function': 'update_profile_pic', 'user_id': app.user.id}) }}',
                dataType: 'json',
                autoUpload: true,
                acceptFileTypes: /(\.|\/)(gif|jpe?g|png)$/i,
                maxFileSize: 999000,

                previewMaxWidth: 120,
                previewMaxHeight: 120,
                previewCrop: false,

                // Enable image resizing, except for Android and Opera,
                // which actually support image resizing, but fail to
                // send Blob objects via XHR requests:
                //disableImageResize: /Android(?!.*Chrome)|Opera/.test(window.navigator && navigator.userAgent),
                disableImageResize: false,
                imageMaxWidth: 1024,
                imageMaxHeight: 1024,
                imageCrop: false, // Force cropped images

                done: function(e, data) {
                    $.each(data.result.files, function(index, file) {
                        $('#profile-picture').html("");
                        $('<img class="img-thumbnail" />')
                            .attr('src', '{{ path('api', {'function': 'get_img', 'user_id': app.user.id}) }}')
                            .appendTo('#profile-picture');
                    });
                },
                progressall: function(e, data) {
                    var progress = parseInt(data.loaded / data.total * 100, 10);
                    $('#upload-progress').css('width', progress + '%');
                    $('#upload-progress').text(progress + '%');

                    var uploadSpeed = data.bitrate; //  // Bps
                    var uploadSpeedText = 'B/s';
                    if(uploadSpeed > 1024) {
                        uploadSpeed = uploadSpeed / 1024; // KBps
                        uploadSpeedText = 'KB/s';
                        if(uploadSpeed > 1024) {
                            uploadSpeed = uploadSpeed / 1024; // MBps
                            uploadSpeedText = 'MB/s';
                            if(uploadSpeed > 1024) {
                                uploadSpeed = uploadSpeed / 1024; // GBps
                                uploadSpeedText = 'GB/s';
                            }
                        }
                    }
                    uploadSpeed = Math.round(uploadSpeed * 100) / 100;
                    $('#upload-progress-speed').text(uploadSpeed + ' ' + uploadSpeedText);
                    $('#upload-progress-percentage').text(progress + '%');
                }
            });
        </script>
    </div>
{% endblock %}
