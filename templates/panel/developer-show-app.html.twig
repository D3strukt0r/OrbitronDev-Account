{% extends 'layout_admin.html.twig' %}

{% block breadcrumb %}
    <div class="g-hidden-sm-down g-bg-gray-light-v8 g-pa-20">
        <ul class="u-list-inline g-color-gray-dark-v6">

            <li class="list-inline-item g-mr-10">
                <a class="u-link-v5 g-color-gray-dark-v6 g-color-lightblue-v3--hover g-valign-middle" href="{{ path('panel', {'page': 'developer-applications'}) }}">{{ 'panel.page.dev_show_app.breadcrumb_link'|trans }}</a>
                <i class="hs-admin-angle-right g-font-size-12 g-color-gray-light-v6 g-valign-middle g-ml-10"></i>
            </li>

            <li class="list-inline-item g-mr-10">
                <a class="u-link-v5 g-color-gray-dark-v6 g-color-lightblue-v3--hover g-valign-middle" href="{{ path('panel', {'page': 'developer-applications'}) }}">{{ 'panel.page.dev_show_app.breadcrumb_link2'|trans }}</a>
                <i class="hs-admin-angle-right g-font-size-12 g-color-gray-light-v6 g-valign-middle g-ml-10"></i>
            </li>

            <li class="list-inline-item">
                <span class="g-valign-middle">{{ app_data.clientIdentifier }}</span>
            </li>
        </ul>
    </div>
{% endblock %}

{% block content %}
    <div class="g-pa-20">
        <h1 class="g-font-weight-300 g-font-size-28 g-color-black g-mb-40">{{ 'panel.page.dev_show_app.title'|trans }}</h1>
        <h4>{{ app_data.clientIdentifier }}</h4>
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <tbody>
                    <tr>
                        <td>{{ 'panel.page.dev_show_app.table.id'|trans }}</td>
                        <td><code>{{ app_data.clientIdentifier }}</code></td>
                    </tr>
                    <tr>
                        <td>{{ 'panel.page.dev_show_app.table.key'|trans }}</td>
                        <td><code>{{ app_data.clientSecret }}</code></td>
                    </tr>
                    <tr>
                        <td>{{ 'panel.page.dev_show_app.table.redirect'|trans }}</td>
                        <td>{{ app_data.redirectUri }}</td>
                    </tr>
                    <tr>
                        <td>{{ 'panel.page.dev_show_app.table.permissions'|trans }}</td>
                        <td>
                            {% for scope in app_data.scopes %}
                                {{ scope }}{% if not loop.last %} |{% endif %}
                            {% endfor %}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <br />
        <p>
            {{ 'panel.page.dev_show_app.dev_note'|trans }}
            <a href="https://github.com/D3strukt0r/openid/wiki">https://github.com/D3strukt0r/openid/wiki</a>
        </p>
    </div>
{% endblock %}
